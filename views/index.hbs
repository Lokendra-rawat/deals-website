{{>header}}
<!-- <h4 style="font-weight: 500" class="text-center mb-3"><b>Top Deals</b></h4> -->
<div class="container">
  <div class="row m-0" id="content-box">
    {{#each data}}
    <div class="col-xs-10 col-sm-6 col-md-4 col-lg-3 col-xl-2 outer-box">
      <div style="border-radius: 5px 5px 3px 3px;" class="box">
        <div class="image">
          <img onerror="this.src='images/supreme1.jpg'" data-original="{{this.smallImageUrl}}" src="{{this.smallImageUrl}}">
        </div>

        <div class="">
          <p class="dealname" title="{{this.dealName}}">
            {{#if spinName}}{{this.spinName}}{{else}}{{this.dealName}}{{/if}}
          </p>
          <div class="box-text">
            <div class="price">
              <div class="">
                <del class="cutprice">
                  <small>
                    {{this.cutPrice}}
                  </small>
                </del>
                <span class="mainprice">
                  {{!-- <!-- <svg style="width: 14px;height: 14px"> 
                    <use xlink:href="#rupee-indian"></use> 
                  </svg> --> --}}
                  ${{this.mainPrice}}
                </span>
              </div>
            </div>
            <div class="clearfix">
              <div class="text-left">
                <a class="storename float-left mt-2" href="/{{this.storeName}}">
                  {{this.storeName}}
                </a>
                <a class="btn btn-primary btn-sm float-right" style="font-size:.74rem;border-radius: 2em;font-weight: 500;letter-spacing:1px" title="{{this.dealName}}" href="{{this.dealUrl}}">
                  Get deal
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  <br/>
<div class="text-center ml-auto mr-auto">
  <button class="btn btn-secondary" style="border-radius: 2em;" onclick="getData()">
    View More Deals 
  </button>
</div>
</div>
<div style="display: none" id="loader">
  <img src="images/loader.svg" />
</div> 
{{>footer}}
{{>search}}

